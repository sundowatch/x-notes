{
  "name": "xnotes",
  "version": "0.1.2",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:linux": "electron-builder --linux",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder -mwl",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Ibrahim Sanduva√ß <ihsanduvac@gmail.com>",
  "license": "ISC",
  "description": "A clean and simple note-taking application with HTML formatting and syntax highlighting",
  "devDependencies": {
    "electron": "^38.1.2",
    "electron-builder": "^24.13.3",
    "electron-reload": "^2.0.0-alpha.1"
  },
  "dependencies": {
    "highlight.js": "^11.9.0",
    "marked": "^12.0.1",
    "quill": "^1.3.7"
  },
  "build": {
    "appId": "com.ibrahim.xnotes",
    "productName": "XNotes",
    "linux": {
      "target": [
        "deb",
        "AppImage"
      ],
      "category": "Office",
      "icon": "build/linux/icons"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icons/icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icons/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "files": [
      "assets/icons/**/*",
      "dist/**/*",
      "src/**/*"
    ]
  }
}
